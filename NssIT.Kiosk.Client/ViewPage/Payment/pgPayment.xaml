            <RowDefinition Height="Auto"/> <!-- 295 -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame x:Name="FrmPayInfo" Grid.Column="0" Grid.Row="0"/>

        <Border Grid.Column="0" Grid.Row="1" Background="White" />

        <!--Frame-->
        <Frame x:Name="FrmGoPay" Grid.Column="0" Grid.Row="2"/>
        <Border Grid.Column="0" Grid.Row="3" 
                Height="0"
